<html>
    <head>
        <title>
            <%= locals.title%>
        </title>
        <script src="https://kit.fontawesome.com/acec10a145.js" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
	<h1 id="page-heading">
		<i class="fas fa-address-book"></i>
			My Contacts List
	</h1> 
        <div>
            <ul id="list">   
                <% for (let i of contact_list) { %> 
                   <div> 
                        <li>
                            <div id="details"> 
                            <p id="name"><%= i.name %></p>
                            <p id="phone"><%= i.phone %></p>
                            </div>
                            <div id="delete-button">
                        <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="fas fa-window-close"> </i>
                        </a>
                    </div>
                        </li>
                    </div>
                    
                <% } %>
            </ul>
        </div>

        <form id="form" action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Enter name" required>
            <input type="number" name="phone" placeholder="Enter phone" required>
            <button type="submit">Add contact</button>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>